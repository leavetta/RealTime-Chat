@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="row"> 
        <div class="col-md-6 mx-auto">@*offset-md-3*@
            <div class="card login-logout-tab">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href='/Identity/Account/Login'>Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='/Identity/Account/Register'>Зарегистрироваться</a>
                        </li>
                    </ul>
                </div>
                <div class="card-content">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @RenderSection("Scripts", required: false)
}
